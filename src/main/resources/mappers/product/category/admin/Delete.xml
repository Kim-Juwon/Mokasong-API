<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mokasong.product.repository.AdminCategoryMapper">
    <!-- SQL -->
    <update id="deleteRootCategory" parameterType="long">
        UPDATE `mokasong`.`product_root_categories`
        SET `is_deleted` = 1
        WHERE `product_root_category_id` = #{rootCategoryId}
    </update>

    <update id="deleteDetailCategory" parameterType="long">
        UPDATE `mokasong`.`product_detail_categories`
        SET `is_deleted` = 1
        WHERE `product_detail_category_id` = #{detailCategoryId}
    </update>
</mapper>