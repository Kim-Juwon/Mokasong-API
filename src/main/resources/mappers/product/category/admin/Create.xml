<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mokasong.product.repository.AdminCategoryMapper">
    <!-- SQL -->
    <insert id="createRootCategory" parameterType="com.mokasong.product.entity.ProductRootCategory"
            useGeneratedKeys="true" keyProperty="productRootCategoryId">
        INSERT INTO `mokasong`.`product_root_categories`
        (`name`)
        VALUES (#{name})
    </insert>

    <insert id="createDetailCategory" parameterType="com.mokasong.product.entity.ProductDetailCategory"
            useGeneratedKeys="true" keyProperty="productDetailCategoryId">
        INSERT INTO `mokasong`.`product_detail_categories`
        (`product_root_category_id`, `name`)
        VALUES (#{productRootCategoryId}, #{name})
    </insert>
</mapper>