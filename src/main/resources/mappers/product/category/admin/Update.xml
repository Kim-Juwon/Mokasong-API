<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mokasong.product.repository.AdminCategoryMapper">
    <!-- SQL -->
    <update id="updateRootCategory" parameterType="com.mokasong.product.entity.ProductRootCategory">
        UPDATE `mokasong`.`product_root_categories`
        SET `name` = #{rootCategory.name}
        WHERE `product_root_category_id` = #{rootCategory.productRootCategoryId}
    </update>

    <update id="updateDetailCategory" parameterType="com.mokasong.product.entity.ProductDetailCategory">
        UPDATE `mokasong`.`product_detail_categories`
        SET
            `name` = #{detailCategory.name},
            `product_root_category_id` = #{detailCategory.productRootCategoryId}
        WHERE
            `product_detail_category_id` = #{detailCategory.productDetailCategoryId}
    </update>
</mapper>