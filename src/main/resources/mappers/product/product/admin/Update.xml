<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mokasong.product.repository.AdminProductMapper">
    <update id="updateProduct" parameterType="com.mokasong.product.entity.Product">
        UPDATE `mokasong`.`products`
        SET
            `product_detail_category_id` = #{product.productDetailCategoryId},
            `name` = #{product.name},
            `price` = #{product.price},
            `discounted_price` = #{product.discountedPrice},
            `stock` = #{product.stock}
        WHERE `product_id` = #{product.productId}
    </update>
</mapper>