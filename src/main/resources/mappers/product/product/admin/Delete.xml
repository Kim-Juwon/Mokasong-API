<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mokasong.product.repository.AdminProductMapper">
    <update id="deleteProduct" parameterType="long">
        UPDATE `mokasong`.`products`
        SET `is_deleted` = 1
        WHERE `product_id` = #{productId}
    </update>

    <update id="undeleteProduct" parameterType="long">
        UPDATE `mokasong`.`products`
        SET `is_deleted` = 0
        WHERE `product_id` = #{productId}
    </update>

    <update id="deleteImages" parameterType="list">
        <foreach collection="imagesToDelete" item="item" separator=";">
            UPDATE `mokasong`.`product_images`
            SET `is_deleted` = 1
            WHERE `product_image_id` = #{item.productImageId}
        </foreach>
    </update>
</mapper>